<Window x:Class="DataViewer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DataViewer"
        mc:Ignorable="d"
        Title="DataViewer 16.4"
        Width="1200"
        Height="724"
        Loaded="Window_Loaded"
        Closed="Window_Closed">


    <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
        <Grid 
             Name="g_main">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="5" />
                <RowDefinition Height="130" />
                <RowDefinition Height="23" />
            </Grid.RowDefinitions>
            <Grid Height="Auto">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="48"/>
                    <ColumnDefinition Name="menu1" Width="200"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Grid 
                    Grid.Column="0"
                    Name="menu_tab">
                    <Grid.Background>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                            <GradientStop Color="#0486f0" Offset="0.0" />
                            <GradientStop Color="#65c0f0" Offset="1.0" />
                        </LinearGradientBrush>
                    </Grid.Background>
                    <Button 
                        x:Name="b_info"
                        Content="&#xEA1F;"
                        HorizontalAlignment="Center"
                        Width="48"
                        Background="Transparent"
                        Foreground="#FFFFFF"
                        BorderThickness="0"
                        FontFamily="Segoe MDL2 Assets"
                        FontSize="18"
                        Height="48"
                        VerticalAlignment="Top"
                        Click="b_info_Click" 
                        Margin="0,0,0,0" />
                </Grid>
                <Grid
                    Grid.Column="1"
                    Name="tab_info">
                    <StackPanel>
                        <StackPanel.Background>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                <GradientStop Color="#0486f0" Offset="0.0" />
                                <GradientStop Color="#65c0f0" Offset="1.0" />
                            </LinearGradientBrush>
                        </StackPanel.Background>
                        <Label 
                            Content="Information"
                            Height="32"
                            VerticalAlignment="Top"
                            FontSize="18"
                            Foreground="#FFFFFF"/>
                        <Grid
                            Name="g_info"
                            Height="290">
                            <Label 
                                Content="x, y = "
                                HorizontalAlignment="Left"
                                VerticalAlignment="Top"
                                Foreground="#FFFFFF"
                                Margin="0,43,0,0" />
                            <TextBox
                                x:Name="t_ix"
                                Width="54"
                                Height="26"
                                Margin="68,43,0,0"
                                TextWrapping="Wrap"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Top"
                                TextAlignment="Right"
                                VerticalContentAlignment="Center"
                                Background="Transparent"
                                Foreground="#FFFFFF"
                                BorderBrush="#FFFFFF"
                                IsReadOnly="True" />
                            <TextBox
                                x:Name="t_iy"
                                Height="26"
                                Width="54"
                                Margin="127,43,0,0"
                                TextWrapping="Wrap"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Top"
                                TextAlignment="Right"
                                VerticalContentAlignment="Center"
                                Background="Transparent"
                                Foreground="#FFFFFF"
                                BorderBrush="#FFFFFF"
                                IsReadOnly="True" />
                            <TextBox
                                x:Name="t_re"
                                Height="26"
                                Margin="53,75,10,0"
                                TextWrapping="Wrap"
                                VerticalAlignment="Top"
                                TextAlignment="Right"
                                VerticalContentAlignment="Center"
                                Background="Transparent"
                                Foreground="#FFFFFF"
                                BorderBrush="#FFFFFF"
                                IsReadOnly="True" />
                            <TextBox
                                x:Name="t_im"
                                Height="26"
                                Margin="53,106,10,0"
                                TextWrapping="Wrap"
                                VerticalAlignment="Top"
                                TextAlignment="Right"
                                VerticalContentAlignment="Center"
                                Background="Transparent"
                                Foreground="#FFFFFF"
                                BorderBrush="#FFFFFF"
                                IsReadOnly="True" />
                            <TextBox x:Name="t_abs" 
                                Height="26"
                                Margin="53,137,10,0"
                                TextWrapping="Wrap"
                                VerticalAlignment="Top"
                                TextAlignment="Right"
                                VerticalContentAlignment="Center"
                                Background="Transparent"
                                Foreground="#FFFFFF"
                                BorderBrush="#FFFFFF"
                                IsReadOnly="True"/>
                            <TextBox x:Name="t_power" 
                                Height="26"
                                Margin="53,168,10,0"
                                TextWrapping="Wrap"
                                VerticalAlignment="Top"
                                TextAlignment="Right"
                                VerticalContentAlignment="Center"
                                Background="Transparent"
                                Foreground="#FFFFFF"
                                BorderBrush="#FFFFFF"
                                IsReadOnly="True"/>
                            <TextBox x:Name="t_phase" 
                                Height="26"
                                Margin="53,199,10,0"
                                TextWrapping="Wrap"
                                VerticalAlignment="Top"
                                TextAlignment="Right"
                                VerticalContentAlignment="Center"
                                Background="Transparent"
                                Foreground="#FFFFFF"
                                BorderBrush="#FFFFFF"
                                IsReadOnly="True"/>
                            <Label 
                                Name="lb_zmin"
                                Content="min = "
                                HorizontalAlignment="Left"
                                VerticalAlignment="Top"
                                Foreground="#FFFFFF"
                                Margin="0,223,0,0"
                                />
                            <Label 
                                Name="lb_zmax"
                                Content="max = "
                                HorizontalAlignment="Left"
                                VerticalAlignment="Top"
                                Foreground="#FFFFFF"
                                Margin="0,254,0,0" />
                            <TextBox
                                x:Name="t_zmin"
                                Height="26"
                                Margin="53,225,10,0"
                                TextWrapping="Wrap"
                                VerticalAlignment="Top"
                                TextAlignment="Right"
                                VerticalContentAlignment="Center"
                                Background="Transparent"
                                Foreground="#FFFFFF"
                                BorderBrush="#FFFFFF"
                                IsReadOnly="True" />
                            <TextBox
                                x:Name="t_zmax"
                                Height="26"
                                Margin="53,256,10,0"
                                TextWrapping="Wrap"
                                VerticalAlignment="Top"
                                TextAlignment="Right"
                                VerticalContentAlignment="Center"
                                Background="Transparent"
                                Foreground="#FFFFFF"
                                BorderBrush="#FFFFFF"
                                IsReadOnly="True" />
                            <Label 
                                Content="Nx, Ny = "
                                HorizontalAlignment="Left"
                                VerticalAlignment="Top"
                                Foreground="#FFFFFF"
                                Margin="0,8,0,0"/>
                            <TextBox
                                x:Name="t_Nx"
                                Width="54"
                                Height="26"
                                Margin="68,10,0,0"
                                TextWrapping="Wrap"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Top"
                                TextAlignment="Right"
                                VerticalContentAlignment="Center"
                                Background="Transparent"
                                Foreground="#FFFFFF"
                                BorderBrush="#FFFFFF"
                                IsReadOnly="True" />
                            <TextBox x:Name="t_Ny" 
                                Height="26"
                                Width="54"
                                Margin="127,10,0,0"
                                TextWrapping="Wrap"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Top"
                                TextAlignment="Right"
                                VerticalContentAlignment="Center"
                                Background="Transparent"
                                Foreground="#FFFFFF"
                                BorderBrush="#FFFFFF"
                                IsReadOnly="True"/>

                            <CheckBox 
                                Name="cb_re" 
                                Content="re" 
                                HorizontalAlignment="Left" 
                                Margin="5,80,0,0" 
                                VerticalAlignment="Top" 
                                Foreground="#FFFFFF"
                                IsChecked="True"/>
                            <CheckBox 
                                Name="cb_im" 
                                Content="im" 
                                HorizontalAlignment="Left" 
                                Margin="5,111,0,0" 
                                VerticalAlignment="Top" 
                                Foreground="#FFFFFF"
                                IsChecked="True"/>
                            <CheckBox 
                                Name="cb_abs" 
                                Content="abs" 
                                HorizontalAlignment="Left" 
                                Margin="5,142,0,0" 
                                VerticalAlignment="Top" 
                                Foreground="#FFFFFF"/>
                            <CheckBox 
                                Name="cb_pow" 
                                Content="pow" 
                                HorizontalAlignment="Left" 
                                Margin="5,173,0,0" 
                                VerticalAlignment="Top"
                                Foreground="#FFFFFF"/>
                            <CheckBox 
                                Name="cb_pha" 
                                Content="pha" 
                                HorizontalAlignment="Left" 
                                Margin="5,204,0,0" 
                                VerticalAlignment="Top" 
                                Foreground="#FFFFFF"/>
                        </Grid>
                        <Grid Height="160">
                            <TextBox Name="t_note" 
                                TextWrapping="NoWrap"
                                VerticalScrollBarVisibility="Auto"
                                HorizontalScrollBarVisibility="Auto"
                                Text="" 
                                Margin="0,0,10,32" 
                                AcceptsReturn="True"
                                Background="Transparent"
                                Foreground="#FFFFFF"
                                BorderBrush="#FFFFFF"/>
                            <Button Name="b_clear" 
                                Content="Clear" 
                                Margin="106,135,10,0"
                                Foreground="#FFFFFF"
                                BorderBrush="#FFFFFF"
                                Background="#2483ff"
                                Click="b_clear_Click_1"/>
                            <Button Name="b_copy" 
                                Content="Copy" 
                                Margin="0,135,105,0"
                                Foreground="#FFFFFF"
                                BorderBrush="#FFFFFF"
                                Background="#2483ff"
                                Click="b_copy_Click"/>
                        </Grid>
                    </StackPanel>
                </Grid>

                <Grid
                    Grid.Column="2"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch"
                    Background="Transparent"
                    ScrollViewer.VerticalScrollBarVisibility="Auto">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*" />
                            <RowDefinition Height="40" />
                        </Grid.RowDefinitions>
                        <Grid Grid.Row="0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="40"/>
                            </Grid.ColumnDefinitions>
                            <ScrollViewer
                                Grid.Column="0"
                                Name="scrollViewer2"
                                Margin="0,0,0,0"
                                HorizontalAlignment="Stretch"
                                VerticalAlignment="Stretch"
                                HorizontalScrollBarVisibility="Visible"
                                VerticalScrollBarVisibility="Visible">
                                <Grid
                                    Name="PreviewGrid" >
                                    <Image
                                        Name="image1"
                                        Stretch="Fill"
                                        Margin="0,0,0,0"
                                        MouseMove="image1_MouseMove"
                                        MouseLeftButtonDown="image1_MouseLeftButtonDown"
                                        RenderOptions.BitmapScalingMode="NearestNeighbor" />
                                </Grid>
                            </ScrollViewer>
                            <Grid Grid.Column="1">
                                <Button
                                    Name="Lwhite"
                                    Width="32"
                                    Height="32"
                                    Background="White"
                                    Margin="4,10,4,0"
                                    VerticalAlignment="Top"
                                    Click="Lwhite_Click"
                                    />
                                <Button
                                    Name="Lred"
                                    Width="32"
                                    Height="32"
                                    Background="LightPink"
                                    Margin="4,47,4,0"
                                    VerticalAlignment="Top"
                                    Click="Lred_Click"
                                    />
                                <Button
                                    Name="Lgreen"
                                    Width="32" Height="32"
                                    Background="LimeGreen"
                                    Margin="4,84,4,0"
                                    VerticalAlignment="Top"
                                    Click="Lgreen_Click"
                                    />
                                <Button
                                    Name="Lblue" 
                                    Width="32" 
                                    Height="32" 
                                    Background="LightSkyBlue"  
                                    Margin="4,121,4,0" 
                                    VerticalAlignment="Top"
                                    Click="Lblue_Click" 
                                    />
                                <Button 
                                    Name="Ldark" 
                                    Width="32" 
                                    Height="32" 
                                    Background="Gray" 
                                    Margin="4,158,4,0" 
                                    VerticalAlignment="Top"
                                    Click="Ldark_Click" 
                                    />
                            </Grid>
                        </Grid>
                        <Grid Grid.Row="1">
                            <TextBox 
                                Name="t_mag" 
                                Text="100" 
                                Height="24" 
                                Width="57" 
                                Margin="4,8,0,0" 
                                HorizontalAlignment="Left" 
                                VerticalAlignment="Top" 
                                HorizontalContentAlignment="Right" 
                                />
                            <Label 
                                Name="label1" 
                                Content="%" 
                                Height="28" 
                                Width="28" 
                                Margin="59,7,0,0" 
                                HorizontalAlignment="Left" 
                                VerticalAlignment="Top" 
                                Foreground="Black" 
                                />
                            <Slider 
                                Name="slider1" 
                                Height="23" 
                                Margin="89,9,0,0" 
                                VerticalAlignment="Top" 
                                Minimum="10" 
                                Maximum="4000" 
                                Value="100" 
                                ValueChanged="slider1_ValueChanged" />
                        </Grid>
                    </Grid>
                </Grid>
            </Grid>
            <GridSplitter 
                Grid.Row="1"
                Name="gridSplitter1"
                Height="10"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
                Background="White">
            </GridSplitter>

            <Grid Grid.Row="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="250"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Grid 
                    Grid.Column="0">
                    <Grid.Background>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                            <GradientStop Color="#0486f0" Offset="0.0" />
                            <GradientStop Color="#65c0f0" Offset="1.0" />
                        </LinearGradientBrush>
                    </Grid.Background>
                    <CheckBox
                        Name="cb_colmap"
                        Content="Color bar"
                        HorizontalAlignment="Left"
                        Foreground="#FFFFFF"
                        Margin="18,14,0,0"
                        VerticalAlignment="Top"/>
                    <Button 
                        x:Name="b_plotall"
                        Content="Plot all"
                        HorizontalAlignment="Left"
                        Height="30"
                        Width="133"
                        Margin="107,18,0,0"
                        Foreground="#FFFFFF"
                        BorderBrush="#FFFFFF"
                        Background="#2483ff"
                        FontSize="14"
                        VerticalContentAlignment="Center"
                        Click="b_plotall_Click" VerticalAlignment="Top" />
                    <Button 
                        x:Name="b_deleteall"
                        Content="Delete all"
                        Height="30"
                        Foreground="#FFFFFF"
                        BorderBrush="#FFFFFF"
                        Background="#2483ff"
                        FontSize="14"
                        VerticalContentAlignment="Center"
                        Click="b_deleteall_Click" 
                        Margin="107,89,10,0" 
                        VerticalAlignment="Top" />
                    <Button 
                        x:Name="b_applyall"
                        Content="Apply to others"
                        HorizontalAlignment="Left"
                        Height="30"
                        Width="133"
                        Margin="107,54,0,0"
                        Foreground="#FFFFFF"
                        BorderBrush="#FFFFFF"
                        Background="#2483ff"
                        FontSize="14"
                        VerticalContentAlignment="Center"
                        Click="b_applyall_Click" VerticalAlignment="Top" />
                </Grid>
                <Grid 
                    Grid.Column="1"
                    x:Name="listwindow"
                    HorizontalAlignment="Stretch" 
                    VerticalAlignment="Stretch"
                    PreviewDragOver="listwindow_PreviewDragOver"
                    PreviewDrop="listwindow_PreviewDrop"
                    AllowDrop="True"
                    Background="White">
                    <DataGrid
                        x:Name="DataGrid1"
                        AutoGenerateColumns="False">
                        <DataGrid.ColumnHeaderStyle>
                            <Style TargetType="DataGridColumnHeader">
                                <Setter Property="HorizontalContentAlignment" Value="Center"/>
                                <Setter Property="Foreground" Value="#262626"/>
                            </Style>
                        </DataGrid.ColumnHeaderStyle>
                        <DataGrid.Columns>
                            <DataGridTextColumn
                                Width="220"
                                Binding="{Binding FileName, UpdateSourceTrigger=PropertyChanged}"
                                Header="File name" >
                            </DataGridTextColumn>
                            <DataGridCheckBoxColumn
                                Width="40"
                                Binding="{Binding IsBinaryData, UpdateSourceTrigger=PropertyChanged}"
                                Header="bin." />
                            <DataGridComboBoxColumn
                                x:Name="cb_plottype"
                                Width="55"
                                SelectedValueBinding="{Binding Type, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                DisplayMemberPath="Value"
                                Header="Type"
                                SelectedValuePath="Key"/>
                            <DataGridComboBoxColumn
                                x:Name="cmb_colmap"
                                Width="100"
                                SelectedValueBinding="{Binding ColMap, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                DisplayMemberPath="Value"
                                Header="Color map"
                                SelectedValuePath="Key"/>
                            <DataGridTextColumn
                                Width="100"
                                Binding="{Binding ZMin, UpdateSourceTrigger=PropertyChanged}"
                                Header="min" >
                            </DataGridTextColumn>
                            <DataGridTextColumn
                                Width="100"
                                Binding="{Binding ZMax, UpdateSourceTrigger=PropertyChanged}"
                                Header="max" >
                            </DataGridTextColumn>
                            <DataGridTextColumn
                                Width="40"
                                Binding="{Binding ColX, UpdateSourceTrigger=PropertyChanged}"
                                Header="x" >
                            </DataGridTextColumn>
                            <DataGridTextColumn
                                Width="40"
                                Binding="{Binding ColY, UpdateSourceTrigger=PropertyChanged}"
                                Header="y" >
                            </DataGridTextColumn>
                            <DataGridTextColumn
                                Width="40"
                                Binding="{Binding ColZ, UpdateSourceTrigger=PropertyChanged}"
                                Header="re" >
                            </DataGridTextColumn>
                            <DataGridTextColumn
                                Width="40"
                                Binding="{Binding ColI, UpdateSourceTrigger=PropertyChanged}"
                                Header="im" >
                            </DataGridTextColumn>
                            <DataGridTemplateColumn Width="50" Header="">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Button
                                            x:Name="b_prev"
                                            Click="b_prev_Click"
                                            Content="Preview"
                                            Tag="{Binding}" />
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTemplateColumn Width="50" Header="">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Button
                                            x:Name="b_plot"
                                            Click="b_plot_Click"
                                            Content="Save"
                                            Tag="{Binding}" />
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTemplateColumn Width="50" Header="">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Button
                                            x:Name="b_Delete"
                                            Click="b_delete_Click"
                                            Content="Delete"
                                            Tag="{Binding}" />
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </Grid>
            <StatusBar 
                Name="statusBar1" 
                Grid.Row="3" 
                Height="23" 
                Margin="0,0,0,0" 
                HorizontalAlignment="Stretch" 
                VerticalAlignment="Bottom">
                <StatusBarItem>

                </StatusBarItem>
            </StatusBar>
        </Grid>
    </Grid>
</Window>
